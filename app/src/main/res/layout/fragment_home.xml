<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/MAPS_button"
        android:layout_width="133dp"
        android:layout_height="69dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="140dp"
        android:text="Maps page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rand_img" />

    <Button
        android:id="@+id/rand_img"
        android:layout_width="133dp"
        android:layout_height="69dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="181dp"
        android:text="Play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/MAPS_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rhett" />

    <ImageView
        android:id="@+id/rhett"
        android:layout_width="499dp"
        android:layout_height="398dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="82dp"
        android:src="@drawable/rhett"
        app:layout_constraintBottom_toTopOf="@+id/rand_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>